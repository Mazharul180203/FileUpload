generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String
  createdAt DateTime  @default(now())
  details   details[] // One-to-many relationship
}

model details {
  id        Int      @id @default(autoincrement())
  user      user     @relation(fields: [userId], references: [id])
  userId    Int
  name      String
  files     files[]
  createdAt DateTime @default(now())
}

model files {
  id        Int      @id @default(autoincrement())
  details   details  @relation(fields: [detailsId], references: [id])
  detailsId Int
  files     String
  createdAt DateTime @default(now())
}
